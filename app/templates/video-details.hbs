<link rel="stylesheet" href="assets/css/video-player.css">
<a href="/" class="back-button">&#8592; Back</a>
<div class="container">
  <div class="video-player">
    <div class="video-player">
      <div class="video-container">
        <div class="video-wrapper">
          <video id="videoPlayer" controls>
            <source src="{{model.url}}" type="video/mp4">
          </video>
        </div>
        <div class="video-controls">
          <button {{action "PlayPause"}} id="playPause">Play</button>
          <span id="currentTime">0:00</span>
          <input type="range" id="videoBar" value="0" min="0" max="100" step="0.1">
          <span id="totalTime">0:00</span>
          <button {{action "skipBackward"}}>&lt;</button>
          <button {{action "skipForward"}}>&gt;</button>
          <button {{action "fastRewind"}}>&lt;&lt;</button>
          <button {{action "fastForward"}}>&gt;&gt;</button>

          <select id="playbackSpeed" {{action "setPlayBackRate" on="change"}}>
            <option value="0.5">0.5x</option>
            <option value="1" selected>1x</option>
            <option value="1.5">1.5x</option>
            <option value="2">2x</option>
            <option value="10">10x</option>
          </select>
          <input type="range" id="volumeBar" value="1" min="0" max="1" step="0.01">
          <button {{action "zoomIn"}}>+</button>
          <button {{action "zoomOut"}}>-</button>
          <button {{action "activeFullScreen"}}>[]</button>
        </div>
      </div>
    </div>
  </div>

  <div class="video-details">
    <p><strong>Video Name:</strong> {{model.fileName}}</p>
    <p><strong>Size:</strong> {{model.size}}</p>
    <p><strong>Duration:</strong> <span id="videoDuration">Loading...</span></p>
  </div>

  <div class="button-controls">
    <div class="group">
      <button {{action "startVideo"}}>Start Video</button>
      <button {{action "stopVideo"}}>Stop Video</button>
      <button {{action "initial"}}>Initial</button>
    </div>

    <div class="group">
      <button {{action "skipBackward"}}>Skip Backward</button>
      <button {{action "skipForward"}}>Skip Forward</button>
    </div>

    <div class="speed-control">
      <label for="speedInput">Speed</label>
      <input type="text" id="speedInput" placeholder="1" />
      <button {{action "setSpeed"}}>Set Speed</button>
    </div>

    <div class="group">
      <button {{action "fastRewind"}}>&lt;&lt;>Fast Rewind</button>
      <button {{action "fastForward"}}>Fast Forward &gt;&gt;</button>
    </div>

    <div class="skip-control">
      <label for="skipInput">Skip</label>
      <input type="number" id="skipInput" placeholder="Enter seconds" />
      <button {{action "skipToSec"}}>Skip</button>
    </div>

    <div class="group">
      <button {{action "downloadFrame"}}>Download Frame</button>
      <button {{action "convertBlackAndWhite"}}>Black and White</button>
    </div>

    <div class="group">
      <button {{action "zoomIn"}}>Zoom In</button>
      <button {{action "zoomOut"}}>Zoom Out</button>
      <button {{action "playNormal"}}>Reset</button>
    </div>
  </div>
</div>
