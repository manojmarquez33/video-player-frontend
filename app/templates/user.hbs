<div class="user-profile">
  <h2>My Profile</h2>

  {{#if model.username}}
    <p><strong>Username:</strong> {{model.username}}</p>
    <p><strong>Email:</strong> {{model.email}}</p>
  {{else}}
    <p>Loading user details...</p>
  {{/if}}

  {{#if loadingLikedVideos}}
    <p>Loading liked videos...</p>
  {{else}}
    <h3>Liked Videos</h3>
    <ul>
      {{#each likedVideos as |video|}}
        <li>{{video.name}}</li>
      {{else}}
        <li>No liked videos found.</li>
      {{/each}}
    </ul>
  {{/if}}

  {{#if loadingDislikedVideos}}
    <p>Loading disliked videos...</p>
  {{else}}
    <h3>Disliked Videos</h3>
    <ul>
      {{#each dislikedVideos as |video|}}
        <li>{{video.name}}</li>
      {{else}}
        <li>No disliked videos found.</li>
      {{/each}}
    </ul>
  {{/if}}



  <button class="update-interest-btn" {{action "openInterestModal"}}>Update Your Interests</button>

  {{#if showInterestModal}}
    <div class="modal-overlay">
      <div class="interest-modal">
        <div class="modal-header">
          <input type="text" class="search-box" placeholder="Search interests..." oninput={{action "filterInterests" value="target.value"}}>
        </div>

        <div class="modal-body">
          <div class="interest-grid">
            {{#each filteredInterests as |interest|}}
              <div class="interest-item {{if (greater (index-of selectedInterestIds interest.id) -1) 'selected' ''}}" {{action "toggleInterest" interest.id}}>
                {{interest.interest_name}}
              </div>

            {{/each}}
          </div>
        </div>

        <div class="modal-footer">
          <button class="update-button" {{action "updateUserInterests"}}>Update</button>
          <button class="cancel-button" {{action "closeInterestModal"}}>Cancel</button>
        </div>
      </div>
    </div>
  {{/if}}
</div>
